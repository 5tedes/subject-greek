        function normalizeText(text) {
            return text.toLowerCase()
                .trim()
                .replace(/[;,.!?]/g, '')
                .replace(/\s+/g, ' ');
        }

        function gradeTest() {
            const form = document.getElementById('testForm');
            let score = 0;
            const maxScore = 50;

            for (let i = 1; i <= 19; i++) {
                const questionNum = `q${i}`;
                const userAnswer = form.elements[questionNum];
                const questionDiv = userAnswer.closest('.question');
                
                let existingFeedback = questionDiv.querySelector('.correct-answer');
                if (existingFeedback) {
                    existingFeedback.remove();
                }

                let isCorrect = false;

                if (userAnswer.type === 'text') {
                    const normalized = normalizeText(userAnswer.value);
                    const correctAnswers = answers[questionNum];
                    
                    if (Array.isArray(correctAnswers)) {
                        isCorrect = correctAnswers.some(ans => normalizeText(ans) === normalized);
                    } else {
                        isCorrect = normalizeText(correctAnswers) === normalized;
                    }
                    
                    if (isCorrect) {
                        if (i <= 5) score += 3;
                        else if (i <= 10) score += 3;
                        else if (i <= 15) score += 2;
                        else if (i === 16) score += 3;
                        else if (i === 17 || i === 19) score += 2;
                        else if (i === 18) score += 2;
                        
                        userAnswer.style.borderColor = '#28a745';
                        userAnswer.style.background = '#d4edda';
                    } else {
                        userAnswer.style.borderColor = '#dc3545';
                        userAnswer.style.background = '#f8d7da';
                        
                        const feedback = document.createElement('div');
                        feedback.className = 'correct-answer show';
                        feedback.innerHTML = `âœ“ Correct answer: ${correctAnswersDisplay[questionNum]}`;
                        questionDiv.appendChild(feedback);
                    }
                } else if (userAnswer.type === 'radio') {
                    const selected = form.querySelector(`input[name="${questionNum}"]:checked`);
                    if (selected && selected.value === answers[questionNum]) {
                        isCorrect = true;
                        if (i === 6 || i === 8) score += 3;
                        else if (i === 17 || i === 19) score += 2;
                        
                        selected.parentElement.style.background = '#d4edda';
                        selected.parentElement.style.borderLeft = '4px solid #28a745';
                    } else {
                        if (selected) {
                            selected.parentElement.style.background = '#f8d7da';
                            selected.parentElement.style.borderLeft = '4px solid #dc3545';
                        }
                        
                        const correctOption = form.querySelector(`input[name="${questionNum}"][value="${answers[questionNum]}"]`);
                        if (correctOption) {
                            const feedback = document.createElement('div');
                            feedback.className = 'correct-answer show';
                            feedback.textContent = `âœ“ Correct: ${correctOption.parentElement.textContent.trim()}`;
                            questionDiv.appendChild(feedback);
